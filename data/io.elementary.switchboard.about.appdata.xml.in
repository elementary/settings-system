<?xml version="1.0" encoding="UTF-8"?>
<component type="addon">
  <id>io.elementary.switchboard.about</id>
  <extends>io.elementary.switchboard</extends>
  <name>System</name>
  <summary>View operating system and hardware information</summary>
  <icon type="stock">application-x-firmware</icon>
  <translation type="gettext">about-plug</translation>

  <releases>
    <release version="6.2.0" date="2023-01-26" urgency="medium">
      <description>
        <p>New features:</p>
        <ul>
          <li>Add a button to restart to firmware setup</li>
        </ul>
        <p>Minor updates:</p>
        <ul>
          <li>Get more accurate memory and storage information</li>
          <li>Handle Ryzen CPU and AMD GPU vendor string</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>

    <release version="6.1.0" date="2022-04-06" urgency="medium">
      <description>
        <p>New features:</p>
        <ul>
          <li>Added support for dark style manufacturer logos</li>
          <li>Added support for offline firmware updates</li>
        </ul>
        <p>Minor updates:</p>
        <ul>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="6.0.1" date="2021-08-23" urgency="medium">
      <description>
        <p>Minor updates:</p>
        <ul>
          <li>Use formatted device name when available</li>
          <li>Display more information for certain GPUs, including IntelÂ® Xe Graphics</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="6.0.0" date="2021-07-15" urgency="medium">
      <description>
        <p>Redesign and new features:</p>
        <ul>
          <li>Rename from About to System</li>
          <li>Split Hardware and Operating System info into their own tabs</li>
          <li>Redesign the Operating System tab with clearer links and buttons</li>
          <li>Add a Firmware view to manage device firmware updates</li>
        </ul>
        <p>More information:</p>
        <ul>
          <li>Provide information for ARM CPUs</li>
          <li>Provide information for more types of Graphics</li>
        </ul>
        <p>Fixes:</p>
        <ul>
          <li>Fix an issue where the view was destroyed early when navigating away</li>
          <li>Fix system memory calculation</li>
        </ul>
        <p>Minor updates:</p>
        <ul>
          <li>Ellipsize long hardware names</li>
          <li>Performance improvements</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="2.6.3" date="2020-05-28" urgency="medium">
      <description>
        <p>Updated translations</p>
      </description>
    </release>
    <release version="2.6.2" date="2020-04-08" urgency="medium">
      <description>
        <p>Updated translations</p>
      </description>
    </release>
    <release version="2.6.1" date="2019-11-15" urgency="medium">
      <description>
        <p>Updated translations</p>
      </description>
    </release>
  </releases>
